        <input type="text" name="url" value="<%= artist.url %>" placeholder="Proile Picture"><br>
        <input type="text" name="link" value="<%= artist.link %>" placeholder="Youtube URL"><br>
        <input type="text" name="bio" value="<%= artist.bio %>" placeholder="Bio"><br>
        <input type="text" name="bookingInfo" value="<%= artist.bookingInfo %>" placeholder="Booking Email"><br>
        <input type="text" name="genre" value="<%= artist.genre %>" placeholder="Genre"><br>
        <input type="text" name="city" value="<%= artist.city %>" placeholder="City"><br><br>
        <button type="submit">Edit Artist</button>
    </form><br>
