<%- include('../partials/header') %>

<h1 class="page-header">OPENING ACT</h1>
<header>
    <nav>
        <ul class="nav-bar">
            <form method="POST" action="/artists/search">
                <input type="text" name="query" placeholder="City">
            </form>
            <li class="nav-list"><a href="/venues">Venues</a></li>
            <li class="nav-list"><a href="/artists">Artists</a></li>
            <li class="nav-list"><a href="/auth/logout">Log Out</a></li>
        </ul>
    </nav>
</header>

<main>

<div class="edit-flex">
<div class="input-border-box">
    <form action="/artists/<%= artist._id %>?_method=PUT" method="POST">
        <input type="text" name="username" value="<%= artist.username %>" placeholder="Artist Name"><br><br>
        <input type="text" name="url" value="<%= artist.url %>" placeholder="Proile Picture"><br><br>
        <input type="text" name="link" value="<%= artist.link %>" placeholder="Youtube URL"><br><br>
        <input type="text" name="instagram" value="<%= artist.instagram %>" placeholder="Instagram"><br><br>
        <input type="text" name="twitter" value="<%= artist.twitter %>" placeholder="Twitter"><br><br>
        <textarea type="text" name="bio" value="<%= artist.bio %>" placeholder="Bio" rows="3"></textarea><br><br>
        <input type="text" name="email" value="<%= artist.email %>" placeholder="Email"><br><br>
        <input type="text" name="genre" value="<%= artist.genre %>" placeholder="Genre"><br><br>
        <input type="text" name="city" value="<%= artist.city %>" placeholder="City"><br><br>
        <div class="edit-prof-btn">
        <button type="submit">Edit Profile</button>
</div>
    </form><br>
</div>
</div>

</main>



<%- include('../partials/footer') %>