<%- include('../partials/header') %>

<h1 class="page-header">OPENING ACT</h1><br><br>
<header>
    <nav>
    <ul class="nav-bar">
        <form method="POST" action="/artists/search">
        <input type="text" name="query" placeholder="City">
        </form>
        <li class="nav-list"><a href="/venues">Venues</a></li>
        <li class="nav-list"><a href="/artists">Artists</a></li>
        <li class="nav-list"><a href="/auth/logout">Log Out</a></li>
    </ul>
    </nav>
</header>

<main>
    <ul class="index-details">
        <% artists.forEach(function(eachArtist) { %>
            <li><a href="/artists/<%= eachArtist._id %>"><br>
        <div class="flip-card">
        <div class="flip-card-inner">
        <div class="flip-card-front">
            <img class="index-photo" width="400" height="270" src="<%= eachArtist.url%>"><br>
        </div>
        <div class="flip-card-back">
            <h1><%= eachArtist.username %></h1> 
            <p><%= eachArtist.bio %></p> 
            <p><%= eachArtist.genre %></p>
            <p><%= eachArtist.city %></p>
            <p>Click to take a listen and connect!</p>
        </div>
        </div>
        </div>

        <%  }) %>

    </ul>

</main>

<%- include('../partials/footer') %>